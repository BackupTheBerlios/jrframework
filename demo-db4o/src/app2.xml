<!DOCTYPE Aplicacion PUBLIC '-//Sun Microsystems Inc.//DTD Application Server 8.0 Domain//EN' 'app.dtd'>



<Aplicacion nombre="Aplicacion de Prueba">
    <CasoUso id="CasoUso001" init="ListaEntidades">
        <Ventana id="ListaEntidades">        
            <Bean name="Buscador" className="metro.servicios.BeanFinder" />
            <Panel  className="com.application.widgets.SplitPane" >
                <Panel  className="com.application.widgets.PanelBuscarUno" ></Panel>
                <Panel  className="com.application.widgets.TableBean" >
                    <Propiedad name="variable" value="Clientes" />
                    <Propiedad name="varSelected" value="UnValor" />
                </Panel>
            </Panel>
            <Operacion nombre="INIT" beanName="Buscador" activacion="init" >  
                <Propiedad name="bean" value="metro.model.Estacion" />
             </Operacion>
            <Operacion nombre="Buscar Estaciones" beanName="Buscador"
                tooltip="Busca todas las subestaciones" >  
                <Propiedad name="bean" value="metro.model.Estacion" />
                </Operacion>
            <Operacion nombre="Buscar Vestibulos" beanName="Buscador" 
                tooltip="Busca todas los vestibulos">
                <Propiedad name="bean" value="metro.model.Vestibulo" />
            </Operacion>
            <Operacion nombre="Buscar Maquinas" beanName="Buscador"
                tooltip="Busca todas las Maquinas" >
                <Propiedad name="bean" value="metro.model.Maquina" />
            </Operacion>
            <Operacion nombre="Detalle Seleccionados" 
                visible="UnValor"
                aviso="Seguro?"
                >
                <Opcion dest="UnaEntidad" />
            </Operacion>
        </Ventana>
        <Ventana id="UnaEntidad">
            <Panel  className="com.application.widgets.PanelBeanForm" >
                <Propiedad name="variable" value="unValor" />
            </Panel>
            <Operacion nombre="Vuelta Lista" >
                <Opcion dest="BACK" />
            </Operacion>
        </Ventana>
    </CasoUso>
</Aplicacion>
